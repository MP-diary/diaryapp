<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:orientation="vertical"    android:paddingLeft="@dimen/activity_horizontal_margin"    android:paddingRight="@dimen/activity_horizontal_margin"    android:paddingTop="@dimen/activity_vertical_margin"    android:paddingBottom="@dimen/activity_vertical_margin"    tools:context="org.androidtown.diaryapplication.InsertScheduleActivity"    android:background="#ffffffff"    >    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:orientation="vertical"        android:id="@+id/above">        <EditText            android:id="@+id/edit_name"            android:layout_width="353dp"            android:layout_height="47dp"            android:hint="  일정 이름"            android:singleLine="true"            android:background="#D5D5D5"/>        <Button            android:id="@+id/insert_dateBtn"            android:layout_width="match_parent"            android:layout_height="wrap_content"            />    </LinearLayout>    <LinearLayout        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:orientation="horizontal"        >        <Button            android:id="@+id/insert_timeBtn"            android:layout_width="270dp"            android:layout_height="wrap_content"            android:layout_below="@+id/insert_dateBtn"            android:layout_alignParentStart="true" />            <Button                android:id="@+id/allday"                android:text="all day"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_gravity="right" />    </LinearLayout>    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:orientation="horizontal"        >        <Button            android:id="@+id/add_saveBtn"            android:text="Add"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_marginStart="60dp"            android:layout_marginEnd="10dp" />        <Button            android:id="@+id/add_deleteBtn"            android:text="Delete"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_marginEnd="10dp"            android:visibility="gone"            />        <Button            android:id="@+id/add_cancelBtn"            android:text="Cancel"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            />    </LinearLayout></LinearLayout>