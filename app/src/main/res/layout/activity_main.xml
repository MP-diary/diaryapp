<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/main">



        <TextView
            android:id = "@+id/today_date_view"
            android:text="@string/today_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id = "@+id/week_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below = "@+id/today_date_view">


            <TextView
                android:text = "@string/sunday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text = "@string/monday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text = "@string/tuesday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text = "@string/wednesday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text = "@string/thursdayday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text = "@string/friday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text = "@string/saturday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <Button
            android:id = "@+id/daily_button"
            android:layout_below="@+id/week_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daily"
            android:onClick="onClick"/>

        <Button
            android:id="@+id/weekly_button"
            android:layout_toRightOf="@+id/daily_button"
            android:layout_below="@+id/week_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weekly"/>

        <Button
            android:id="@+id/monthly_button"
            android:layout_toRightOf="@+id/weekly_button"
            android:layout_below="@+id/week_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monthly"/>

        <Button
            android:id="@+id/home_button"
            android:layout_toRightOf="@+id/monthly_button"
            android:layout_below="@+id/week_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home"/>

</RelativeLayout>
