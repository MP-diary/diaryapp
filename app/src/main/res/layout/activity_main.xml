<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#ffffffff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffffff"

        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <Button
            android:id="@+id/cal"
            android:text="cal"
            android:layout_width="46dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_alignParentLeft="true"
            android:onClick="monthlyClick"/>
        <TextView
            android:id="@+id/dateText"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="DateView"
            android:textSize="24dp"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:layout_centerInParent="true"
            />
        <Button
            android:id="@+id/add"
            android:text="Add"
            android:layout_width="46dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_alignParentRight="true"
            android:onClick="onaddClicked" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffffff">

        <TextView
            android:id = "@+id/today_date_view"
            android:text = "@string/today_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:id = "@+id/week_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below = "@+id/today_date_view">


            <Button
                android:id="@+id/sun"
                android:text = "@string/sunday"
                android:layout_width="46dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_alignParentLeft = "true"
                android:onClick="dailyClick"/>

            <Button
                android:id = "@+id/mon"
                android:text = "@string/monday"
                android:layout_width="46dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_alignParentLeft = "true"
                android:layout_below="@+id/sun"
                android:onClick="dailyClick"/>

            <Button
                android:id = "@+id/tue"
                android:text = "@string/tuesday"
                android:layout_width="46dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_alignParentLeft = "true"
                android:layout_below="@+id/mon"
                android:onClick="dailyClick"/>

            <Button
                android:id = "@+id/wen"
                android:text = "@string/wednesday"
                android:layout_width="46dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_alignParentLeft = "true"
                android:layout_below="@+id/tue"
                android:onClick="dailyClick"/>

            <Button
                android:id = "@+id/thu"
                android:text = "@string/thursday"
                android:layout_width="46dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_alignParentLeft = "true"
                android:layout_below="@+id/wen"
                android:onClick="dailyClick"/>

            <Button
                android:id = "@+id/fri"
                android:text = "@string/friday"
                android:layout_width="46dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_alignParentLeft = "true"
                android:layout_below="@+id/thu"
                android:onClick="dailyClick"/>

            <Button
                android:id = "@+id/sat"
                android:text = "@string/saturday"
                android:layout_width="46dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_alignParentLeft = "true"
                android:layout_below="@+id/fri"
                android:onClick="dailyClick"/>

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>
